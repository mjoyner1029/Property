# Monitoring Stack Environment Variables

# General
ENVIRONMENT=production

# Grafana
GRAFANA_ADMIN=admin
GRAFANA_PASSWORD=securepassword  # Change this in production
GRAFANA_URL=http://grafana.yourdomain.com
GRAFANA_SMTP_ENABLED=true
GRAFANA_SMTP_HOST=smtp.example.com:587
GRAFANA_SMTP_USER=user@example.com
GRAFANA_SMTP_PASSWORD=smtppassword
GRAFANA_SMTP_FROM=grafana@yourdomain.com
GRAFANA_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel

# Alertmanager
ALERTMANAGER_EMAIL_FROM=alerts@yourdomain.com
SMTP_HOST=smtp.example.com:587
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=smtppassword
SMTP_TLS=true

# Alert Recipients
ALERTS_EMAIL_TO=team@yourdomain.com
CRITICAL_EMAIL_TO=oncall@yourdomain.com
HIGH_EMAIL_TO=team@yourdomain.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_CHANNEL=#alerts
SLACK_CRITICAL_CHANNEL=#critical-alerts
SLACK_HIGH_CHANNEL=#high-alerts
SLACK_MEDIUM_CHANNEL=#medium-alerts

# PagerDuty Integration
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key

# Host Configuration
BACKEND_HOST=backend:5050
DB_HOST=db:5432
