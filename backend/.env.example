# Flask Configuration
APP_ENV=development # Use 'production' for production environment
FLASK_ENV=development # Legacy, prefer APP_ENV
FLASK_APP=wsgi.py
SECRET_KEY=use-a-strong-random-key-in-production # Generate with scripts/generate_secrets.sh
JWT_SECRET_KEY=use-a-different-strong-random-key-in-production # Generate with scripts/generate_secrets.sh
LOG_LEVEL=DEBUG # Use INFO or WARNING in production

# Database Configuration
DATABASE_URL=sqlite:///app.db
# Example for PostgreSQL:
# DATABASE_URL=postgresql://your_db_user:your_db_pass@localhost:5432/asset_anchor

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Stripe API Keys
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
EMAIL_PROVIDER=postmark
EMAIL_API_KEY=your_postmark_api_key
EMAIL_FROM=no-reply@assetanchor.io

# AWS S3 Configuration
S3_BUCKET=assetanchor-dev-uploads
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Error Reporting
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
REDIS_URL=redis://localhost:6379/0 # Optional, falls back to in-memory if not set

# Security
CSP_ENFORCE=false # Set to 'true' to enforce Content Security Policy in production
