# Asset Anchor Frontend Environment Variables
# ======================================
# 
# IMPORTANT NOTES:
# - This file is versioned and ONLY contains example values
# - Copy to .env for local development
# - All values are injected at build time or through window.__ENV at runtime
# - NEVER put secrets in frontend environment variables
# - All frontend environment variables are publicly visible in the browser
# - Use httpOnly cookies and server endpoints for sensitive operations
# - For production, set these in your deployment platform (Vercel, Netlify, etc.)
# 
# Supported formats:
# - REACT_APP_* (Create React App format)
# - VITE_* (Vite format)
# - Runtime injection via window.__ENV (see start.js)

# API Configuration
# ----------------
REACT_APP_API_URL=http://localhost:5050/api
REACT_APP_SOCKET_URL=http://localhost:5050
REACT_APP_FRONTEND_URL=http://localhost:3000

# External Services
# ----------------
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE_IN_PRODUCTION   # public key only

# Sentry Error Tracking
# -------------------
# Leave empty to disable Sentry completely
REACT_APP_SENTRY_DSN=
# Override environment name (defaults to REACT_APP_ENV)
REACT_APP_SENTRY_ENVIRONMENT=
# Performance sampling rate (0.0-1.0, default 0.1)
REACT_APP_SENTRY_SAMPLE_RATE=0.1
# Force enable Sentry in non-production (default false)
REACT_APP_ENABLE_SENTRY=false
# Version/release tag
REACT_APP_VERSION=1.0.0

# Environment Information
# ----------------------
REACT_APP_ENV=development
# When set to 'production', disables all console logs except errors
REACT_APP_LOG_LEVEL=debug

# Asset URLs
# ---------
REACT_APP_ASSET_URL=
REACT_APP_PUBLIC_PATH=

# Authentication Settings
# ---------------------
REACT_APP_TOKEN_REFRESH_INTERVAL=900000   # 15 minutes in milliseconds
REACT_APP_TOKEN_EXPIRY=3600000            # 1 hour in milliseconds
REACT_APP_AUTH_STORAGE_PREFIX=aa_
REACT_APP_CSRF_HEADER_NAME=X-CSRF-Token
REACT_APP_CSRF_COOKIE_NAME=csrf-token

# Feature Flags
# ------------
REACT_APP_ENABLE_NOTIFICATIONS=false
REACT_APP_ENABLE_CHAT=false
REACT_APP_ENABLE_PAYMENTS=false

# Analytics and Monitoring
# ----------------------
REACT_APP_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_SENTRY_ENVIRONMENT=development
REACT_APP_SENTRY_RELEASE=

# Performance and Caching
# ---------------------
REACT_APP_API_CACHE_DURATION=300000  # 5 minutes in milliseconds
REACT_APP_MAX_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY_MS=1000       # 1 second base delay

# IMPORTANT:
# - Secrets (Stripe secret, JWT secrets, API keys, etc.) MUST NOT be placed in frontend envs.
# - Use backend or platform environments for secrets.
